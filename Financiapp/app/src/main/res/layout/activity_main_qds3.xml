<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green"
    tools:context=".MainActivityQDS3">

    <Button
        android:id="@+id/buttonSeguros"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:onClick="onClickButton"
        android:text="SEGUROS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFinanc" />

    <Button
        android:id="@+id/buttonGastos"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="GASTOS"
        app:layout_constraintStart_toEndOf="@+id/buttonEuribor"
        app:layout_constraintTop_toBottomOf="@+id/buttonTipo" />

    <Button
        android:id="@+id/buttonEuribor"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="EURIBOR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonComisiones" />

    <Button
        android:id="@+id/buttonFinanc"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="PORCENTAJE FINANCIACIÓN"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/buttonTipo"
        app:layout_constraintTop_toBottomOf="@+id/buttonTAE" />

    <Button
        android:id="@+id/buttonTipo"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="TIPO INTERÉS"
        app:layout_constraintStart_toEndOf="@+id/buttonComisiones"
        app:layout_constraintTop_toBottomOf="@+id/buttonMorosos" />

    <Button
        android:id="@+id/buttonComisiones"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="COMISIONES"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCIRBE" />

    <Button
        android:id="@+id/buttonCapacidad"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="48dp"
        android:onClick="onClickButton"
        android:text="Capacidad endeudamiento"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/buttonRatio"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRatio"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="48dp"
        android:onClick="onClickButton"
        android:text="Ratio de endeudamiento"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/buttonPtmo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMorosos"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="Fichero morosos"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/buttonCIRBE"
        app:layout_constraintTop_toBottomOf="@+id/buttonRatio" />

    <Button
        android:id="@+id/buttonTAE"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="T.A.E."
        app:layout_constraintStart_toEndOf="@+id/buttonMorosos"
        app:layout_constraintTop_toBottomOf="@+id/buttonCapacidad" />

    <Button
        android:id="@+id/buttonCIRBE"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:onClick="onClickButton"
        android:text="CIRBE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPtmo" />

    <Button
        android:id="@+id/buttonPtmo"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:onClick="onClickButton"
        android:text="¿Qué es un préstamo?"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="401dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGastos">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>