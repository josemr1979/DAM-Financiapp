<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityDOC">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="372dp"
        android:layout_height="162dp"
        android:layout_marginTop="32dp"
        android:text="A continuación te detallo la documentación que suelen solicitar las entidades financieras para estudiar una solicitud de préstamo:"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/iBAsala"
        android:layout_width="181dp"
        android:layout_height="239dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/asalariado" />

    <ImageButton
        android:id="@+id/iBAutono"
        android:layout_width="181dp"
        android:layout_height="239dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/autonomo" />
</androidx.constraintlayout.widget.ConstraintLayout>